# Supabase Configuration
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=your-anon-key

# Payment Processing
# Stripe
VITE_STRIPE_PUBLISHABLE_KEY=pk_test_...
STRIPE_SECRET_KEY=sk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...

# Razorpay (for Indian market)
VITE_RAZORPAY_KEY_ID=rzp_test_...
RAZORPAY_KEY_SECRET=...

# PayPal
VITE_PAYPAL_CLIENT_ID=...
PAYPAL_CLIENT_SECRET=...

# Email Service (SendGrid/Mailgun)
SENDGRID_API_KEY=SG...
MAILGUN_API_KEY=...
MAILGUN_DOMAIN=...

# Analytics
VITE_GOOGLE_ANALYTICS_ID=G-...
GOOGLE_SEARCH_CONSOLE_ID=...
VITE_HOTJAR_ID=...

# Social Media APIs (for authentication and marketing)
FACEBOOK_APP_ID=...
INSTAGRAM_ACCESS_TOKEN=...
TWITTER_API_KEY=...

# Chatbot/AI Integration
OPENAI_API_KEY=sk-...
ANTHROPIC_API_KEY=sk-ant-...

# File Storage (if using external storage)
AWS_ACCESS_KEY_ID=...
AWS_SECRET_ACCESS_KEY=...
AWS_BUCKET_NAME=...
AWS_REGION=...

# Admin Panel Security
ADMIN_JWT_SECRET=your-very-secure-secret-key
ADMIN_2FA_SECRET=your-2fa-secret

# Application Settings
NODE_ENV=development
VITE_APP_URL=http://localhost:5173
VITE_API_URL=http://localhost:3000

# Internationalization
VITE_DEFAULT_LANGUAGE=en
VITE_DEFAULT_CURRENCY=USD

# Feature Flags
VITE_ENABLE_CHATBOT=false
VITE_ENABLE_LOYALTY_PROGRAM=false
VITE_ENABLE_MULTILINGUAL=false

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Email Templates
WELCOME_EMAIL_TEMPLATE_ID=d-...
ORDER_CONFIRMATION_TEMPLATE_ID=d-...
PASSWORD_RESET_TEMPLATE_ID=d-...

# Webhook URLs
STRIPE_WEBHOOK_URL=/api/webhooks/stripe
RAZORPAY_WEBHOOK_URL=/api/webhooks/razorpay

# Monitoring and Logging
SENTRY_DSN=https://...
LOG_LEVEL=info

# CDN Configuration (if using)
VITE_CDN_URL=https://cdn.example.com

# Backup Configuration
BACKUP_SCHEDULE="0 2 * * *"
BACKUP_RETENTION_DAYS=30